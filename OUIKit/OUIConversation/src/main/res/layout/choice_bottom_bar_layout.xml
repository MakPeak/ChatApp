<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CAEFEC"
    android:layout_width="match_parent"
    android:layout_height="39dp">

    <ImageView
        android:id="@+id/remove_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/delete_multi_select" />

    <ImageView
        android:id="@+id/forward_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/remove_all"
        app:layout_constraintStart_toEndOf="@+id/remove_all"
        app:layout_constraintTop_toTopOf="@+id/remove_all"
        app:srcCompat="@mipmap/forward_multi_select" />
</androidx.constraintlayout.widget.ConstraintLayout>
