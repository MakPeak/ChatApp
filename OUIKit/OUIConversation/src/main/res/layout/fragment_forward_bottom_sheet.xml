<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".widget.ForwardBottomSheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/upload_from_album_btn"
        android:layout_height="wrap_content"
        tools:context=".ui.auth.BottomSheetAvatarFragment">

        <TextView
            android:id="@+id/forward"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:fontFamily="@font/pingfang_sc_regular"
            android:text="Combine and forward"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/upload_from_album_btn"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:text=""
            android:textStyle="bold"
            android:background="#D8D8D8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forward" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:fontFamily="@font/pingfang_sc_regular"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
